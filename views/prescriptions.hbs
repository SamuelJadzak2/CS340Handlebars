<!-- index.hbs -->
<h1>Prescriptions Page</h1>


{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.prescription_id}}</td>
            <td>{{this.desciption}}</td>
            <td>{{this.Patients_patient_id}}</td>
            <td>
                <form id="delete-prescription-form-ajax"action="/delete-prescription"method="POST">
                    <button type="submit" name="delete_prescriptionid" value="{{this.prescription_id}}">Delete</button>
                </form>
            </td>            

        </tr>
        {{/each}}
    </tbody>
</table>
<p>To add a new prescription, please enter the information below and click 'Submit'!</p>
<form id="add-prescription-form-ajax"action="/add-prescription"method="POST">
    <label for="test-name">Prescription: </label>
    <input type="text" name="description" id="description">
    <label for="patient_id">Patient:</label>
    <select name="patient_id">
    {{#each patients}}
      <option name="pat_id" value="{{this.patient_id}}">{{this.first_name}} {{this.last_name}}</option>
    {{/each}}
    
    <input type="submit">
</form>

