<!-- index.hbs -->
<h1>Patient Illnesses Page</h1>


{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.patient_illnesses_id}}</td>
            <td>{{this.date_diagnosed}}</td>
            <td>{{this.current_status}}</td>
            <td>{{this.Patients_patient_id}}</td>
            <td>{{this.Illnesses_illness_id}}</td>

        </tr>
        {{/each}}
    </tbody>
</table>
<form action="/add-patient-illness" method="post">
  <label for="current-status">Current Status:</label>
  <select name="current_status">
      <option name="current-status" value="Controlled">Controlled</option>
      <option name="current-status" value="Uncontrolled">Uncontrolled</option>
  </select>

  <label for="patient_id">Patient:</label>
  <select name="patient_id">
    {{#each patients}}
      <option name="pat_id" value="{{this.patient_id}}">{{this.first_name}} {{this.last_name}}</option>
    {{/each}}
  </select>

  <label for="illness_id">Illness ID:</label>
  <select name="illness_id">
    {{#each illnesses}}
      <option name="prov_id" value="{{this.illness_id}}">{{this.illness_name}}</option>
    {{/each}}
  </select>

  <label for="datetime_id">Date and Time:</label>
  <input type="datetime-local" id="datetime_id" name="appointment_date_time">

  <button type="submit" >Add Patient Tests</button>
</form>